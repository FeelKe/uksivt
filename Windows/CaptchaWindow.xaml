<Window x:Class="WpfApp17.Windows.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp17.Windows"
        mc:Ignorable="d"
        Title="Каптча" Height="300" Width="400">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Static/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Viewbox>
            <Grid  Height="300" Width="400">
                <Image Name="CaptchaImage" Width="200" Height="60" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,33,0,0"/>
                <TextBox Name="CaptchaTextBox" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Отправить" Width="150" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="VerifyClick"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
